<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/style.css">
    <title>Document</title>



</head>
<body>

<div class="container" >
    <div class="section" >
        <div class="section-menu" >
            <h1>Teacher</h1>
            <div class="menu" >
                <ul>
                    <li> <a href="#">Guruhlar</a></li>
                </ul>
            </div>
            <form action="/" method="get" enctype="application/x-www-form-urlencoded">
                <button type="submit" >Sign out</button>
            </form>
        </div>

        <div class="section-mine" >
            <div class="teacher-section" >
                <div class="wrapper" >
                    <div class="wrapper-title" >
                        <h2>Guruhlar</h2>
                    </div>
                    <br> <br>
                    <hr>
                    <br>
                    <div class="wrapper-list" >
                        <table>
                            <thead>
                              <tr>
                                <th>Guruh nomi</th>
                                <th>Kurs</th>
                                <th>Vazifa</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% groupData.forEach(e => { %>
                                    <tr>
                                        <td><%= e.groupname %></td>
                                        <td><%= e.course %></td>
                                        <td><button class="new" data-modal="groupmodal1">Add New Homework</button></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div id="groupmodal1" class="modal" >
                    <button class="close">Close</button>
                    <br> <br>
                    <form  action="/teacher" method="post" enctype="application/x-www-form-urlencoded">
                        <label>Gruppani tanlang</label>
                        <select name="group" id="group">
                            <% groupData.forEach(e => { %>
                                <option value="<%= e.groupname %>"><%= e.groupname %></option>
                            <% }) %>
                        </select>
                        <br> <br>
                        <textarea name="text" id="text" cols="40" rows="10" placeholder="Vazifani yozing"></textarea>
                        <br> <br>
                        <button type="submit">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <script src="/assets/app.js"></script>
    
</body>
</html>